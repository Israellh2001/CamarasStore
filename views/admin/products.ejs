    <body>
        <!-- Header -->
        <nav class="navbar navbar-light bg-light" style="padding: 1em">


          <div class="nav-brand"> <h3>Dedos tienda <i class="fas fa-store"></i> </h3>  </div>

          <form class="form-inline">
              <div style="margin: 0 1em 0 0em">
